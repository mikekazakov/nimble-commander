////////////////////////////////////////////////////////////////////////////////////////////////////
// Build target
////////////////////////////////////////////////////////////////////////////////////////////////////

// Architecture
VALID_ARCHS = $(ARCHS_STANDARD_64_BIT)
ARCHS = $(ARCHS_STANDARD_64_BIT)
ONLY_ACTIVE_ARCH = NO

// SDK
MACOSX_DEPLOYMENT_TARGET = 10.15
SDKROOT = macosx

////////////////////////////////////////////////////////////////////////////////////////////////////
// Preprocessor
////////////////////////////////////////////////////////////////////////////////////////////////////
RAPIDJSON_PP_FLAGS[arch=x86_64] = RAPIDJSON_HAS_STDSTRING=1 RAPIDJSON_HAS_CXX11_NOEXCEPT=1 RAPIDJSON_HAS_CXX11_RVALUE_REFS=1 RAPIDJSON_48BITPOINTER_OPTIMIZATION=1 RAPIDJSON_SSE2=1 RAPIDJSON_SSE42=1
RAPIDJSON_PP_FLAGS[arch=arm64]  = RAPIDJSON_HAS_STDSTRING=1 RAPIDJSON_HAS_CXX11_NOEXCEPT=1 RAPIDJSON_HAS_CXX11_RVALUE_REFS=1
// disabled RAPIDJSON_NEON=1 for now, after a weird crash on ARM64 during MAS review...
GCC_PREPROCESSOR_DEFINITIONS = SPDLOG_COMPILED_LIB SPDLOG_FMT_EXTERNAL $(RAPIDJSON_PP_FLAGS)

////////////////////////////////////////////////////////////////////////////////////////////////////
// Code generation
////////////////////////////////////////////////////////////////////////////////////////////////////
CLANG_X86_VECTOR_INSTRUCTIONS[arch=x86_64] = sse4.2
GCC_NO_COMMON_BLOCKS = YES
ENABLE_STRICT_OBJC_MSGSEND = YES
CLANG_ENABLE_OBJC_ARC = YES
DEBUG_INFORMATION_FORMAT = dwarf

////////////////////////////////////////////////////////////////////////////////////////////////////
// Linker
////////////////////////////////////////////////////////////////////////////////////////////////////
DEAD_CODE_STRIPPING = YES

////////////////////////////////////////////////////////////////////////////////////////////////////
// Raw toolchain flags
////////////////////////////////////////////////////////////////////////////////////////////////////

// C
OTHER_CFLAGS = -fvisibility=hidden -Wframe-larger-than=32768 -fbracket-depth=512

// C++
OTHER_CPLUSPLUSFLAGS = $(OTHER_CFLAGS) -std=c++2b -Wall -Wextra -Wold-style-cast -Werror -cxx-isystem$(THRDPTY)/boost/include -cxx-isystem$(THRDPTY)/spdlog/include -cxx-isystem$(THRDPTY)/libarchive/include -cxx-isystem$(THRDPTY)/googletest/include -cxx-isystem$(THRDPTY)/robin_hood/include -cxx-isystem$(THRDPTY)/frozen/include

// Linker
OTHER_LDFLAGS = -ObjC -framework Foundation -framework Cocoa -framework SystemConfiguration -framework IOKit -framework Quartz -framework QuartzCore -framework DiskArbitration -framework OpenDirectory -framework ServiceManagement -framework Security -framework Carbon -framework StoreKit -framework NetFS -weak_framework UniformTypeIdentifiers -lxml2 -larchive -lspdlog -lgmock -lgtest -lz -lssl -lcrypto -llzma -lbz2 -lssh2 -lcurl -lpugixml -liconv -lAppAuth-macOS -lAquaticPrime -lpstld -lzstd -llz4 -llzo2 -lre2 -lfmt -lcxxbackport -v -ld_classic

////////////////////////////////////////////////////////////////////////////////////////////////////
// Search paths
////////////////////////////////////////////////////////////////////////////////////////////////////

// Path to 3rd-Party dependencies
THRDPTY=../../3rd_Party

// Path to NC's own libraries
LIBS=..

// Paths - headers
USE_HEADERMAP = NO
HEADER_SEARCH_PATHS = $(THRDPTY)/magic_enum/include $(THRDPTY)/Catch2/include $(THRDPTY)/rapidjson/include $(THRDPTY)/libssh2/include $(THRDPTY)/pugixml/include $(THRDPTY)/zlib/include $(THRDPTY)/bz2/include $(THRDPTY)/libcurl/include $(THRDPTY)/AquaticPrime/include $(THRDPTY)/MMTabBarView $(THRDPTY)/AppAuth/include $(THRDPTY)/pstld/include $(THRDPTY)/re2/include $(THRDPTY)/fmt/include

// Paths - libraries
 LIBRARY_SEARCH_PATHS = $(THRDPTY)/spdlog/lib $(THRDPTY)/googletest/lib $(THRDPTY)/z/lib $(THRDPTY)/OpenSSL/lib $(THRDPTY)/libarchive/lib $(THRDPTY)/lzma/lib $(THRDPTY)/bz2/lib $(THRDPTY)/libssh2/lib  $(THRDPTY)/libcurl/lib $(THRDPTY)/pugixml/lib $(THRDPTY)/AquaticPrime/lib $(THRDPTY)/AppAuth/built $(THRDPTY)/pstld/lib $(THRDPTY)/zstd/lib $(THRDPTY)/lz4/lib $(THRDPTY)/lzo/lib $(THRDPTY)/re2/lib $(THRDPTY)/fmt/lib $(THRDPTY)/libcxxbackport/lib

